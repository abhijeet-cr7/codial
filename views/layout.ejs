<html>
    <head>
        <title>
            <%= title  %>
        </title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <link rel="stylesheet" href="/css/layout.css">
        <link rel="stylesheet" href="/css/header.css">
        <link rel="stylesheet" href="/css/footer.css">
        
        <%- style %>
        <!-- upar mein jo style likha hai wo ye kaam karta hai ki niche body mei jitna bhi style ya script ka link hai usko upar style mei ya niche script mein bhej deta hai accordingly -->
    </head>

    <body>
        <%- include('_header'); %>
        <!-- <% if(flash.success && flash.success.length > 0) { %>
            <h5>
                <%= flash.success %>
            </h5>
            <% } %> -->
        <main id="layout-main">
        <%- body %>
        <!-- upar body wala part variable hai wo change karega accordingly requirement ke hisab se -->
        </main>


        <%- include('_footer'); %>
        <%- script %>
       
        <script>
        <% if(flash.success && flash.success.length > 0) { %>
            new Noty({
         theme: 'relax',
         text: '<%= flash.success %>',
         type : 'success',
         layout : 'topLeft',
         timeout: 1500

         }).show();
        <% } %>
        <% if(flash.error && flash.error.length > 0) { %>
        new Noty({
         theme: 'relax',
         text : '<%= flash.error %>',
         type: 'error',
         layout: 'topRight',
         timeout : 1500
        }).show();
        <% } %>  
        </script>
    </body>
</html>